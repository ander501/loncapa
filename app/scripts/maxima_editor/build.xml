<?xml version="1.0" encoding="UTF-8"?>
<project default="build" name="maxima editor">
    
    <property description="YUICompressor" name="YUICompressor" value="lib/yuicompressor-2.4.2.jar"/>
    
    <target name="concatjs" description="concat src .js files">
        <concat destfile="dist/maxima_editor.js">
            <header>(function () {</header>
            <fileset dir="." includes="src/**/*.js"/>
            <footer>}());</footer>
        </concat>
    </target>
    
    <target name="compression" description="compress maxima_editor.js">
        <apply executable="java">
          <fileset dir="dist">
            <include name="maxima_editor.js" />
          </fileset>
          <arg line="-jar" />
          <arg path="${YUICompressor}" />
          <arg value="--charset" />
          <arg value="UTF-8" />
          <arg value="-o" />
          <arg value="dist/maxima_editor.min.js" />
        </apply>
    </target>
    
    <target name="build" depends="concatjs, compression" description="optimizes files for execution">
        <!--
        <copy file="maxima_editor.html" todir="dist"/>
        <copy todir="dist/MathJax">
            <fileset dir="lib/MathJax"/>
        </copy>
        -->
    </target>
    
    <target name="clean" description="deletes generated files">
        <delete dir="dist"/>
    </target>
    
</project>
